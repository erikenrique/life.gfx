<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.name %></title>
    <link href="/css/output.css" rel="stylesheet">
    <script defer src="/main.js"></script>
</head>
<body class="bg-maroon-900 text-white">
    <% include partials/header %>

    <div class="container mx-auto p-6">
        <a href="/admin/dashboard" class="text-gray-400">&larr; Back to Dashboard</a>

        <h1 id="projectTitle" class="text-3xl font-bold mb-4" contenteditable="true" data-project-id="<%= project._id %>">
            <%= project.name %>
        </h1>

        <div class="bg-maroon-700 p-4 rounded shadow-md">
            <h2 class="text-xl font-semibold mb-4">Scenes</h2>

            <% if (scenes && scenes.length > 0) { %>
                <ul>
                    <% scenes.forEach(scene => { %>
                        <li class="py-2">
                            <a
                                href="/admin/project/<%= project._id %>/scene/<%= scene._id %>"
                                class="text-lg text-blue-400 hover:underline"
                            >
                                <%= scene.name %>
                            </a>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <div class="text-gray-400">No scenes available.</div>
            <% } %>

            <!-- for future use: adding scenes -->
            <div class="mt-4">
                <button
                    class="btn btn-outline opacity-50 cursor-not-allowed"
                    title="Coming Soon!"
                    disabled
                >
                    Create Scene
                </button>
            </div>
        </div>
    </div>
</body>
</html>
